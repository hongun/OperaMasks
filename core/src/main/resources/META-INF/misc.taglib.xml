<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
    "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
    "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
  <namespace>http://www.apusic.com/jsf/misc</namespace>

  <tag>
    <tag-name>useBean</tag-name>
    <component>
      <component-type>org.operamasks.faces.UseBean</component-type>
      <handler-class>org.operamasks.faces.facelets.misc.UseBeanHandler</handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>stateAware</tag-name>
    <component>
      <component-type>org.operamasks.faces.StateAware</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>elite</tag-name>
    <handler-class>org.operamasks.faces.facelets.misc.ELiteHandler</handler-class>
  </tag>
  
</facelet-taglib>